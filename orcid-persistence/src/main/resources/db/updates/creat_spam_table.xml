<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="CREATE-SPAM-TABLE" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="spam" />
			</not>
		</preConditions>	
		<createTable tableName="spam">
			<column name="orcid" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="reported_date" type="TIMESTAMP WITH TIME ZONE" />		
			<column name="source_type" type="VARCHAR(20)" />
			<column name="reporter_ip" type="VARCHAR(60)" />
			<column name="count" type="INT" />			
			<column name="date_created" type="TIMESTAMP WITH TIME ZONE" />			
			<column name="last_modified" type="TIMESTAMP WITH TIME ZONE" />			
		</createTable>
		<addForeignKeyConstraint constraintName="spam_orcid_fk" baseTableName="spam" baseColumnNames="orcid" referencedTableName="profile" referencedColumnNames="orcid" />
	</changeSet>
	
	<changeSet id="SPAM-ORCID-INDEX" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">
			<not>
				<indexExists indexName="spam_orcid_index" tableName="spam" />
			</not>
		</preConditions>
		<sql>create index spam_orcid_index on spam(orcid);</sql>
	</changeSet>
	
	<changeSet id="GRANT-READ-PERMISSIONS-TO-ORCIDRO-ON-SPAM" author="Angel Montenegro" dbms="postgresql">
		<preConditions>
			<sqlCheck expectedResult="1">SELECT 1 FROM pg_roles WHERE rolname='orcidro'</sqlCheck>
		</preConditions>
		<sql>GRANT SELECT ON spam to orcidro;</sql>
	</changeSet>
	
</databaseChangeLog>